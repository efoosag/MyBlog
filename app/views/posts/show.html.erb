<h1>Details of A Specific Post A Particular User</h1>

<div class='post'>
<span><%= @post.title  %></span><span> by </span><span><%= @post.user.name  %></span>
<br>
<span class='counter'>
<span>Comments: <%= @post.comments_counter %></span>
<span>, Likes: <%= @post.likes_counter %></span>
</span>
<br>
<p><%= @post.text %></p>
</div>
<div class='comment'>
<% @post.comments.each do |comment| %>
    <span><%= comment.user.name %>:</span>
    <span><%= comment.text%></span>
    <br>
<% end %>
</div>
<button><%= link_to  "Add Comment", new_user_post_comment_path(@post.user, @post)  %></button>
<%= render partial: 'likes/like_form' %>

