<h1>Display Page For A Particular User</h1>

<%= render 'user' %>
<div class='bio'>
  <h2>Bio<h2>
  <p><%= @user.bio %></p>
</div>

<% @user.last_three_posts.each do |post| %>
<div class='post'>
  <br>

  <%= link_to  post.title, user_post_path(@user, post.id)  %>

  <p><%= post.text %></p>
  <span class='counter'>
    <span>Comments: <%= post.comments_counter %></span>
    <span>, Likes: <%= post.likes_counter %></span>
  </span>
</div>
<% end %>
<%= link_to 'Add Post', new_user_post_path(@user) %>
<button><%= link_to  "See all posts", user_posts_path(@user)  %></button>
